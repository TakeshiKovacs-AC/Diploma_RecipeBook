<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.CommonAppButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_size</item>
        <item name="android:minHeight">@dimen/icon_button_size</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.LowMenu" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/deep_green</item>
        <item name="android:textColorHint">@color/deep_green</item>
        <item name="android:textColor">@color/deep_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:minWidth">@dimen/icon_button_size</item>
        <item name="android:minHeight">@dimen/icon_button_size</item>
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.Theme.Diploma_project_Nerecipe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>